@model Sale
@{
    ViewData["Title"] = "Leah's Sporting Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Leah's Sporting</h1>
@*    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
*@
</div>
<form asp-action="Index" method="post">
@*    <div asp-validation-summary="All"></div>*@
    <div class="container">


    <div class="row form-group">
        <label asp-for="SaleAmount" class="col-sn-3"></label>
        <div class="col-sn-3">
            <input asp-for="SaleAmount" class="form-control" />
        </div>
        <span asp-validation-for="SaleAmount" class="col text-danger"></span>
        </div>

    <div class="row form-group">
        <label asp-for="TaxRate" class="col-sn-3"></label>
        <div class="col-sn-3">
            <input asp-for="TaxRate" class="form-control" />
        </div>
        <span asp-validation-for="TaxRate" class="col text-danger"></span>
        </div> 

    <div class="row form-group">
        <label class="col-sn-3">Tax Amount</label>
        <div class="col-sn-3">
            <input value=@ViewBag.TaxAmount.ToString("C2") readonly  class="form-control" />
        </div>
        </div>

    <div class="row form-group">
        <label class="col-sn-3">Total Sale Price</label>
        <div class="col-sn-3">
            <input value=@ViewBag.TotalSalePrice.ToString("C2") readonly class="form-control" />
        </div>
        </div>
    
    <div class="row form-group">
        <div class="col-offset-sm-3">
        <button type="Submit" class="btn-primary p-2 mr-5">Calculate</button>
        <a asp-action="Index" class="btn btn-outline-secondary p-2">Clear</a>
        </div>
       </div>
        </div>
</form>

